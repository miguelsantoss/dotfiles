[colors]
bg = ${xrdb:background}
fg = ${xrdb:foreground}


blk = ${xrdb:color0}
red = ${xrdb:color1}
grn = ${xrdb:color2}
ylw = ${xrdb:color3}
blu = ${xrdb:color4}
mag = ${xrdb:color5}
cyn = ${xrdb:color6}
wht = ${xrdb:color7}

bblk = ${xrdb:color8}
bred = ${xrdb:color9}
bgrn = ${xrdb:color10}
bylw = ${xrdb:color11}
bblu = ${xrdb:color12}
bmag = ${xrdb:color13}
bcyn = ${xrdb:color14}
bwht = ${xrdb:color15}

[global/wm]
margin-top        = 0
margin-bottom     = 0
override-redirect = true

[bar/base]
monitor = ${env:MONITOR:eDP1}
width    = 100%
height   = 24
offset-x = 0
offset-y = 0

background = ${colors.bg}
foreground = ${colors.fg}
border-color = ${colors.bg}

font-0 = cherry:size=14;2
font-1 = Siji:size=9;2

modules-left   = workspaces title
modules-center =
modules-right  = volume backlight battery date

border-size         = 6
padding-left        = 0
padding-right       = 0
module-margin-left  = 1
module-margin-right = 0

bottom = false

[module/date]
type                     = internal/date
interval                 = 1
date                     = " %I:%M"
format-prefix            = 
format-padding           = 2

format-background        = ${colors.fg}
format-foreground        = ${colors.bg}

[module/title]
type = internal/xwindow
label-maxlen = 50
format-padding = 2

[module/backlight]
type = internal/backlight
card = intel_backlight
enable-scroll = false

format = <label>
format-prefix = 
format-padding    = 1

label=%percentage%%
label-padding = 1

format-background = ${colors.blu}
format-foreground = ${colors.bg}

[module/volume]
type = internal/volume

format-volume = <label-volume>
format-muted = <label-muted>

label-muted             = muted
label-muted-padding     = 1

format-volume-prefix = " "
format-muted-prefix  = " "

format-volume-padding = 2
format-muted-padding    = 2

format-volume-background = ${colors.mag}
format-muted-background  = ${colors.mag}

format-volume-foreground = ${colors.bg}
format-muted-foreground  = ${colors.bg}

[module/music]
type = internal/mpd

host = 127.0.0.1
port = 6600

interval = 2

format-online = <label-song>
format-online-padding = 2

label-song         = " %title% - %artist%"
label-song-maxlen = 45
label-song-padding = 1

[module/spotify]
type = custom/script
interval = 2

format = <label>
format-prefix-foreground = ${colors.red}
label = %output:0:45:...%
format-padding = 1

exec = ~/.config/polybar/mpris.sh
click-left = playerctl previous
click-middle = playerctl play-pause
click-right = playerctl next

[module/workspace2bwm]
type              = custom/script
exec              = 2bws.sh
interval          = 0.01
format-padding    = 1
scroll-up         = exec wscycle.sh -f
scroll-down       = exec wscycle.sh -r

[module/battery]
type          = internal/battery
full-at       = 98
battery       = BAT0
adapter       = AC0
poll-interval = 5

format-charging-prefix      = ""
format-discharging-prefix   = ""
format-full-prefix          = ""

label-charging      = " %percentage%% "
label-discharging   = " %percentage%% "
label-full          = " %percentage%% "

format-charging-padding = 1
format-discharging-padding = 1
format-full-padding    = 1

format-charging-background = ${colors.grn}
format-discharging-background = ${colors.red}
format-full-background    = ${colors.cyn}

format-charging-foreground = ${colors.bg}
format-discharging-foreground = ${colors.bg}
format-full-foreground    = ${colors.bg}

[module/workspaces]

	type            = internal/bspwm
	strip-wsnumbers = true
	enable-scroll   = false
	enable-click    = false

	format          = <label-state> <label-mode>
  label-monitor   = %name%

	label-mode-background = ${colors.bg}
	label-mode-foreground = ${colors.fg}
	label-mode-padding    = 2

	label-focused            = %name%
	label-focused-background = ${colors.blu}
	label-focused-foreground = ${colors.bg}
	label-focused-padding    = 2

	label-occupied            = %name%
	label-occupied-background = ${colors.bg}
	label-occupied-foreground = ${colors.fg}
	label-occupied-padding    = 2

	label-empty            = %name%
	label-empty-background = ${colors.bg}
	label-empty-foreground = ${colors.fg}
	label-empty-padding    = 2

	label-urgent            = %name%
	label-urgent-background = ${colors.bg}
	label-urgent-foreground = ${colors.fg}
	label-urgent-padding    = 2
